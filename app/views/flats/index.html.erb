 <div class="container">

<div class="search-bar">
  <%= simple_form_for :search, url: flats_path, method: :get do |f| %>
    <div class="search-form-control form-group">
      <input class="form-control string required" type="text" name="search[query]" id="search_query" />
      <button name="button" type="submit" class="btn btn-flat">
        <i class="fas fa-search"></i> Search
      </button>
    </div>
  <% end %>
</div>

  <div class="d-flex">
    <%@flats.each do |flat| %>
      <div class="col-3">
          <div class="index-card">
            <div class="index-image">
              <%= image_tag("dog_example.jpg") %>
                <%# <img src="https://lh5.googleusercontent.com/XTpvvX2z_T_UjyNionpv5qi1TW53p15B4F6lnJsjBwK4pKe5GToekhPA8DcofLi2vyDWhkRBFLA2P4aZeIXQlCZCj7qiR9iVyMoprea2A0Fv7hF8HS0nhoLDc_JtWRmva8tP2yjg" alt="Appartement moderne"> %>
            </div>
            <div class="card-content">
                <div class="card-header">
                    <div class="label location"><%= flat.title %></div>
                </div>
                <div class="label title"><%= flat.city %></div>
                <div class="details">
                    <div class="detail-item">
                        <i class="fas fa-user"></i>
                        <span class="label"><%= flat.guest %> voyageurs</span>
                    </div>
                    <div class="detail-item">
                        <i class="fas fa-bed"></i>
                        <span class="label"><%= flat.bedroom %> chambres</span>
                    </div>
                </div>
                <div class="label description"><%= flat.description %></div>
                <div class="price-section">
                    <span class="price"><%= flat.price %>€</span>
                    <span class="period">par nuit</span>
                </div>
                <div class="host-info">
                    <div class="label host-avatar"><%= flat.user.username.first.upcase %></div>
                    <span class="label host-name">Hébergé par <%= flat.user.username %></span>
                </div>
            </div>
          </div>
    </div>
    <% end %>
    </div>
</div>
