<h1 class="text-3xl font-bold mb-6">Find a Flat</h1>

<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
  <% @flats.each do |flat| %>
    <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition">

      <img src="https://source.unsplash.com/featured/?apartment" class="w-full h-48 object-cover" alt="flat image">

      <div class="p-4">
        <h2 class="text-lg font-semibold"><%= flat.title %></h2>
        <p class="text-gray-600"><%= flat.city %></p>
        <p class="text-sm text-gray-500 mt-1"><%= truncate(flat.description, length: 100) %></p>

        <div class="flex justify-between items-center mt-3">
          <p class="text-md font-bold"><%= number_to_currency(flat.price) %> / night</p>
          <p class="text-sm text-gray-600">
            ğŸ› <%= flat.bedroom %> Â· ğŸ‘¤ <%= flat.guest %>
          </p>
        </div>

        <%= link_to "View", flat_path(flat), class: "inline-block mt-3 text-blue-600 hover:underline" %>
      </div>
    </div>
  <% end %>
</div>
