 <div class="container">
  <div class="d-flex justify-content-center gap-5">
    <%@flats.each do |flat| %>
      <div class="col-3">
        <div class="row">
          <div class="index-card">
            <div class="index-image">
                <img src="https://lh5.googleusercontent.com/XTpvvX2z_T_UjyNionpv5qi1TW53p15B4F6lnJsjBwK4pKe5GToekhPA8DcofLi2vyDWhkRBFLA2P4aZeIXQlCZCj7qiR9iVyMoprea2A0Fv7hF8HS0nhoLDc_JtWRmva8tP2yjg" alt="Appartement moderne">
            </div>
            <div class="card-content">
                <div class="card-header">
                    <div class="location"><%= flat.title %></div>
                </div>
                <div class="title"><%= flat.city %></div>
                <div class="details">
                    <div class="detail-item">
                        <i class="fas fa-user"></i>
                        <span><%= flat.guest %> voyageurs</span>
                    </div>
                    <div class="detail-item">
                        <i class="fas fa-bed"></i>
                        <span><%= flat.bedroom %> chambres</span>
                    </div>
                </div>
                <div class="description"><%= flat.description %></div>
                <div class="price-section">
                    <span class="price"><%= flat.price %>€</span>
                    <span class="period">par nuit</span>
                </div>
                <div class="host-info">
                    <div class="host-avatar"><%= flat.user.username.first.upcase %></div>
                    <span class="host-name">Hébergé par <%= flat.user.username %></span>
                </div>
            </div>
        </div>
    </div>
  </div>
    <% end %>
    </div>
</div>
