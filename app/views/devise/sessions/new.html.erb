
<div class="devise-log-container">

  <h1>Bienvenue sur AirPnP</h1>
  <div class="h2style"><h2>Log in</h2></div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  label: "Mot de passe",
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
    </div>
  <div class="liensdevise">
    <div class="liensutiles"><%= render "devise/shared/links" %></div>
    <div class="form-actions">
      <%= f.button :submit, "Connexion" %>
    </div>
      <% end %>

  </div>
</div>
